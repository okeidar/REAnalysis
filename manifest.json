{
  "manifest_version": 3,
  "name": "RE Analyzer - ChatGPT Embedded",
  "version": "2.0.0",
  "description": "Real Estate Property Analyzer embedded directly in ChatGPT for seamless property analysis",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardRead",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content.js"],
      "css": ["embedded-styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "RE Analyzer - Embedded UI"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["docx.min.js", "embedded-ui.html", "embedded-styles.css", "chatgpt-native-styles.css"],
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"]
    }
  ]
}